game_running = True
started = False
while game_running:
    command = input('>').upper()
    if command == 'HELP':
        print('''
start - to start the car
stop - to stop the car
quit - to exit'''
              )
    elif command == 'START':
        if started:
            print('already started')
        else:
            started = True
            print('Car started... Ready to go!')
    elif command == 'STOP':
        if not started:
            print('car already stopped')
        else:
            started = False
            print('Car stopped.')
    elif command == 'QUIT':
        break
    else:
        print('Unknown command')
